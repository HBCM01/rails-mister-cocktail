
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <a class="navbar-brand" href="#">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" />
</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <h1>What's your poison</h1>

  <%= form_tag cocktails_path, method: :get do %>
    <%= label_tag(:search, "") %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag("Search", :name => nil) %>
  <% end %>
</div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="#"><%= link_to"home", root_path %></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Messages</a>
      </li>
      <li class="nav-item dropdown">
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="#">Action</a>
          <a class="dropdown-item" href="#">Another action</a>
        </div>
      </li>
    </ul>
  </div>


<div class="banner">

  <div class="container">
    <h1>Mister Tipple</h1>
    <p>Making cocktails <strong>great!</strong></p>
  </div>
  <button class="create-button"><%= link_to 'create your own cocktail', new_cocktail_path %></button>
</div>



<div class="cards big-pad">
  <%@cocktails.each do |cocktail| %>

    <%= link_to cocktail_path(cocktail) do %>
      <div class="card-trip">
      <% if cocktail.photo.attached? %>
        <%=cl_image_tag cocktail.photo.key, height: 300, width: 550, crop: :fill, class:"car_image" %>
        <% else  %>
        <img src="https://images.unsplash.com/photo-1489824904134-891ab64532f1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" alt="default car">
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%=cocktail.name %> </h2>
          </div>
          <h2 class="card-trip-pricing"></h2>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<button><%= link_to 'create your own cocktail', new_cocktail_path %></button>





