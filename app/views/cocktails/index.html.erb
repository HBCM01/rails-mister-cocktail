<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <a class="navbar-brand" href="#">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" />
</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

<h1>What's your poison</h1>

<%= form_tag cocktails_path, method: :get do %>
  <%= label_tag(:search, "") %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag("Search", :name => nil) %>
<% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="#"><%= link_to"home", root_path %></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Messages</a>
      </li>
      <li class="nav-item dropdown">
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="#">Action</a>
          <a class="dropdown-item" href="#">Another action</a>
        </div>
      </li>
    </ul>
  </div>
</div>

<div class="banner">

  <div class="container">
    <h1>Le Wagon brings <strong>tech skills</strong> to <strong>creative people</strong>!</h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
  </div>
  <button class="create-button"><%= link_to 'create your own cocktail', new_cocktail_path %></button>
</div>

<div class="grid-container">
  <ul>
   <%@cocktails.each do |cocktail|%>
      <% if cocktail.photo.attached? %>
        <div class="grid-item">
          <div class="card-category" >
            <%= cl_image_tag cocktail.photo.key, width: 400, height: 300, crop: :fill %>
              <% end %>
            <li><%=link_to cocktail.name, cocktail_path(cocktail)%></li>
          <% end %>
        </div>
      </div>
  </ul>
</div>

<button><%= link_to 'create your own cocktail', new_cocktail_path %></button>



