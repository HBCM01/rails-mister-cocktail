<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %> <%= dose.ingredient.name %>
  <button><%= link_to 'Delete ingredient', cocktail_dose_path(@cocktail, dose.id), method: :delete,
  data: { confirm: "Are you sure you want to delete this ingredient?"} %></button></li>
  <% end  %>
</ul>
<button><%= link_to "back", cocktails_path  %></button>
<button><%= link_to "add ingredients", new_cocktail_dose_path(@cocktail.id)  %></button>
<button><%= link_to 'Delete Cocktail', cocktail_path(@cocktail), method: :delete,
data: { confirm: "Are you sure you want to delete this Cocktail?"}%></button>

